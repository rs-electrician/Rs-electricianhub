<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>RS Electrician Hub</title>
  <meta name="description" content="RS Electrician Hub - Trusted electrician services. Wiring, lighting, CCTV, inverter, emergency repair." />
  <link rel="stylesheet" href="assets/style.css">
  <link rel="icon" href="assets/img/logo.png">
</head>
<body data-lang="en">
  <header class="site-header">
    <div class="nav-wrap">
      <a class="brand" href="index.html">
        <img src="assets/img/logo.png" alt="RS Electrician" class="logo">
        <div class="brand-texts">
          <div class="brand-title">RS Electrician Hub</div>
          <div class="brand-sub">Fast • Reliable • Expert</div>
        </div>
      </a>

      <div class="nav-actions">
        <button id="lang-toggle" class="lang-toggle">हिंदी</button>
        <nav class="main-nav">
          <a href="index.html" data-i18n="nav.home">Home</a>
          <a href="services.html" data-i18n="nav.services">Services</a>
          <a href="price.html" data-i18n="nav.price">Price List</a>
          <a href="gallery.html" data-i18n="nav.gallery">Gallery</a>
          <a href="feedback.html" data-i18n="nav.feedback">Feedback</a>
          <a href="contact.html" data-i18n="nav.contact">Contact</a>
          <a href="book.html" class="btn btn-gradient" data-i18n="nav.book">Book Service</a>
        </nav>

        <button class="hamburger" aria-label="menu">☰</button>
      </div>
    </div>
  </header>

  <!-- Hero -->
  <section class="hero">
    <div class="hero-inner">
      <div class="hero-left">
        <div class="kicker" data-i18n="hero.kicker">Professional Electrical Services</div>
        <h1 class="hero-title" data-i18n="hero.title">Trusted Electrician for Homes & Offices</h1>
        <p class="hero-desc" data-i18n="hero.desc">Wiring, lighting, repair, inverter, CCTV — fast response, honest pricing.</p>
        <div class="hero-ctas">
          <a href="book.html" class="btn btn-xl btn-gradient" data-i18n="hero.book">Book Service</a>
          <a id="wa-home" class="btn btn-outline" target="_blank">WhatsApp</a>
        </div>
        <div class="hero-contact">
          <span data-i18n="hero.call">Call:</span> <a href="tel:6389293604">6389293604</a> · <a href="mailto:rselectrician9283@gmail.com">rselectrician9283@gmail.com</a>
        </div>
      </div>

      <div class="hero-right">
        <!-- colorful card stack -->
        <div class="hero-card">
          <img src="assets/img/hero.svg" alt="electrician" class="hero-illustration">
        </div>
        <div class="features">
          <div class="feature" style="--accent:#FFD024"><strong>24×7</strong><span data-i18n="feat.1">Emergency Help</span></div>
          <div class="feature" style="--accent:#06b6d4"><strong>Certified</strong><span data-i18n="feat.2">Skilled Electrician</span></div>
          <div class="feature" style="--accent:#a855f7"><strong>Transparent</strong><span data-i18n="feat.3">Upfront Pricing</span></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services grid -->
  <section class="section">
    <div class="section-head">
      <h2 data-i18n="services.title">Our Services</h2>
      <p data-i18n="services.subtitle">Click any service to see details and prices</p>
    </div>
    <div id="services-grid" class="cards-grid"></div>
  </section>

  <!-- Testimonials -->
  <section class="section testimonial-section">
    <h2 data-i18n="testimonials.title">Happy Customers</h2>
    <div id="testimonial-slider" class="testimonial-slider"></div>
  </section>

  <!-- Quick contact -->
  <section class="section card quick-contact">
    <h3 data-i18n="contact.quick_title">Quick Contact</h3>
    <form onsubmit="event.preventDefault(); submitMailto(this, i18n('email.subject_quick'));">
      <div class="form-grid">
        <input name="name" placeholder="" data-placeholder-i18n="form.name" required>
        <input name="phone" placeholder="" data-placeholder-i18n="form.phone" required>
        <input name="city" placeholder="" data-placeholder-i18n="form.city">
      </div>
      <textarea name="message" rows="3" placeholder="" data-placeholder-i18n="form.message"></textarea>
      <div class="form-actions">
        <button class="btn btn-primary" type="submit" data-i18n="contact.send_email">Send Email</button>
        <a id="wa-quick" class="btn btn-outline" target="_blank">WhatsApp</a>
      </div>
    </form>
  </section>

  <footer class="site-footer">
    <div class="footer-inner">
      <div class="footer-col">
        <img src="assets/img/logo.png" alt="logo" class="logo-footer">
        <p data-i18n="footer.desc">Professional electrician services in your city. Quick response, transparent pricing, reliable work.</p>
        <p><strong data-i18n="footer.owner_lbl">Owner:</strong> Rishabh Tripathi</p>
      </div>
      <div class="footer-col">
        <h4 data-i18n="footer.links">Quick Links</h4>
        <ul>
          <li><a href="index.html" data-i18n="nav.home">Home</a></li>
          <li><a href="price.html" data-i18n="nav.price">Price List</a></li>
          <li><a href="gallery.html" data-i18n="nav.gallery">Gallery</a></li>
          <li><a href="feedback.html" data-i18n="nav.feedback">Feedback</a></li>
        </ul>
      </div>
      <div class="footer-col">
        <h4 data-i18n="footer.contact">Contact</h4>
        <p><a href="tel:6389293604">6389293604</a></p>
        <p><a href="mailto:rselectrician9283@gmail.com">rselectrician9283@gmail.com</a></p>
        <a id="wa-footer" class="btn btn-gradient" target="_blank">WhatsApp Booking</a>
      </div>
    </div>
    <div class="footer-bottom">© <span class="year"></span> RS Electrician Hub. All rights reserved.</div>
  </footer>

  <a id="floating-wa" class="floating-wa" target="_blank">WhatsApp</a>

  <script src="assets/app.js"></script>
</body>
</html>
